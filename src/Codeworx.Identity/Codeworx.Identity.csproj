<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.3</TargetFramework>
  </PropertyGroup>
  <Import Project="..\..\global\GlobalInfo.targets" />
  <ItemGroup>
    <None Remove="assets\css\style.css" />
    <None Remove="assets\js\login.js" />
    <None Remove="assets\login.html" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="StyleCop.Analyzers" Version="1.0.2">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
    <PackageReference Include="System.Security.Claims" Version="4.3.0" />
  </ItemGroup>
  <ItemGroup>
    <AdditionalFiles Include="..\..\global\stylecop.json" Link="stylecop.json" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="assets\css\style.css" />
    <EmbeddedResource Include="assets\js\login.js" />
    <EmbeddedResource Include="assets\loggedin.html" />
    <EmbeddedResource Include="assets\login.html" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Codeworx.Identity.Primitives\Codeworx.Identity.Primitives.csproj" />
  </ItemGroup>

  <Target Name="TypeScriptCompile" BeforeTargets="Build">
    <Exec Command="tsc" WorkingDirectory="assets" />
  </Target>
</Project>